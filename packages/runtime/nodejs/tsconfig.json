{
  "extends": "@flowgram.ai/ts-config/tsconfig.flow.path.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [],
    "baseUrl": "src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@workflow/*": [
        "workflow/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/workflow/executor/condition/constant.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
